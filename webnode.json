{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "",
    "aegir_mysql_host": "",
    "aegir_mysql_user": "",
    "aegir_mysql_password": ""
  },
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "awforce-ansible/webnode_packer.yml",
    }
  ],
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "source_ami": "ami-98e114f8",
    "instance_type": "t2.medium",
    "ssh_username": "admin",
    "ssh_timeout": "1000s",
    "ami_name": "awforce-d8-webnode {{timestamp}}"
  }],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "keep_input_artifact": false
      }
    ]
  ]
}
