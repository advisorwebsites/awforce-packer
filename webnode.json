{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "awforce-ansible/webnode_packer.yml",
      "groups": ["common", "mysql-servers"]
    }
  ],
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-f0e7d19a",
    "instance_type": "t2.micro",
    "ssh_username": "admin",
    "ssh_timeout": "1000s",
    "ami_name": "awforce-d8-webnode {{timestamp}}"
  }],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "keep_input_artifact": false
      }
    ]
  ]
}
